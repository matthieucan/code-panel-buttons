{
  "name": "panel-buttons",
  "displayName": "Panel Buttons",
  "description": "Add a panel with buttons to execute terminal commands. Everything can be pre-configured per-user or per-project via settings.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "panel-buttons",
          "title": "Panel Buttons",
          "icon": "resources/panel-buttons.svg"
        }
      ]
    },
    "views": {
      "panel-buttons": [
        {
          "id": "panelButtonsView",
          "name": "Buttons"
        }
      ]
    },
    "commands": [
      {
        "command": "panel-buttons.executeCommand",
        "title": "Execute Command",
        "icon": "$(play)"
      },
      {
        "command": "panel-buttons.refresh",
        "title": "Refresh Panel Buttons",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "panel-buttons.refresh",
          "when": "view == panelButtonsView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Panel Buttons",
      "properties": {
        "panelButtons.buttons": {
          "type": "array",
          "default": [],
          "description": "Buttons to display in the panel. Buttons with the same 'section' property are grouped together.",
          "items": {
            "type": "object",
            "required": [
              "title",
              "command"
            ],
            "properties": {
              "title": {
                "type": "string",
                "description": "Display title for the button"
              },
              "command": {
                "type": "string",
                "description": "Terminal command to execute when the button is clicked"
              },
              "section": {
                "type": "string",
                "description": "Section name to group this button under (optional)"
              },
              "icon": {
                "type": "string",
                "description": "Icon for the button (VS Code codicon name, e.g., 'play')"
              },
              "tooltip": {
                "type": "string",
                "description": "Tooltip text shown on hover"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
